<Page x:Class="WpfApp1.Frames.Monitor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Monitor" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="OpenSettings" HorizontalAlignment="Left" Margin="30,0,0,0" BorderThickness="2" BorderBrush="Black" Padding="0"  Height="39" Width="38" Background="Transparent" VerticalAlignment="Center" >
            <Button.Content>
                <Image Source="/images/Settings.png" Stretch="UniformToFill"/>
            </Button.Content>
        </Button>
        <Button Style="{DynamicResource ButtonStyle1}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 20 0" Content="ADD" Click="Button_Click"/>
    </Grid>
</Page>
